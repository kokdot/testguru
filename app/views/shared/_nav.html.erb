<div class="navbar navbar-light bg-light">
  <%= link_to 'TestGuru', root_path, class: 'navbar-brand' %>

  <span class="navbar-text">
    <% if user_signed_in?%>
      <%= t('.welcome') %>, <b><%= current_user.email %></b> Guru | 
      <%= link_to t('.logout'), destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %> | 
      <% if current_user.admin?%>
        <%= link_to t('.admin'), admin_tests_path, class: "btn btn-outline-warning" %>
      <% end %>
    <% else %>
      <%= link_to t('.sign_up'),  new_user_registration_path, class: "btn btn-outline-success" %> | 
      <%= link_to t('.login'), new_user_session_path, class: "btn btn-outline-success" %>
    <% end %>
  </span>
</div>
