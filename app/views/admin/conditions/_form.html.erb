<%= form_with model: [:admin, @condition], local: true do |form| %>
  <%= render 'shared/errors', resource: @condition  %>
  
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </p>

  <%= form.submit %>
<% end %>
